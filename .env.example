# ==============================================
# AI-JARVIS Configuration Template
# ==============================================

# ============ LLM Configuration ============
LLM_MODEL=llama3.2:latest
LLM_ENDPOINT=http://ollama:11434
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048
LLM_CONTEXT_WINDOW=4096

# ============ STT Configuration ============
STT_MODEL=base
STT_LANGUAGE=fr
STT_DEVICE=cpu
WHISPER_MODEL_PATH=/models/whisper

# ============ TTS Configuration ============
TTS_MODEL=fr_FR-siwis-medium
TTS_VOICE_SPEED=1.0
PIPER_MODEL_PATH=/models/piper

# ============ Vision Configuration ============
YOLO_MODEL=yolov8n.pt
YOLO_CONFIDENCE=0.5
ENABLE_WEBCAM=true
ENABLE_OCR=true
TESSERACT_LANG=fra+eng

# ============ Memory Configuration ============
MEMORY_BACKEND=chromadb
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
VECTOR_DIMENSION=384
MEMORY_RETENTION_DAYS=90

# ============ Security Configuration ============
ENABLE_SANDBOX=true
DRY_RUN_MODE=false
MAX_CONCURRENT_ACTIONS=5
ACTION_TIMEOUT=30
AUDIT_LOG_ENABLED=true
ALLOWED_ACTIONS=["open_app","search_web","send_notification","control_volume","screenshot"]

# ============ IoT/MQTT Configuration ============
MQTT_ENABLED=false
MQTT_BROKER=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=jarvis
MQTT_PASSWORD=changeme
MQTT_TOPIC_PREFIX=jarvis/

# ============ API Configuration ============
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000"]
ENABLE_API_DOCS=true

# ============ Orchestrator Configuration ============
ORCHESTRATOR_LOG_LEVEL=INFO
ORCHESTRATOR_WORKERS=4
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# ============ Frontend Configuration ============
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_VISION=true

# ============ Database Configuration ============
POSTGRES_USER=jarvis
POSTGRES_PASSWORD=changeme
POSTGRES_DB=jarvis_db
DATABASE_URL=postgresql://jarvis:changeme@postgres:5432/jarvis_db

# ============ Redis Configuration ============
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme